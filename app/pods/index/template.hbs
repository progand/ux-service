<section class="row index-section-1 bg-warning">
  <div class="col-xs-12">
    <div class="col-xs-12 col-sm-6 m-b-3">
      <h1 class="text-primary m-b-2">TestMyUI</h1>
      <h4 class="text-muted m-b-3">Evaluate your design and find pitfalls to improve usability of your product.</h4>
      {{#link-to "tasks" class="btn btn-lg btn-danger"}}Get started{{/link-to}}
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" width="560" height="315" src="https://www.youtube-nocookie.com/embed/BrVnBdW6_rE?rel=0&amp;controls=0&amp;showinfo=0" frameborder="0" allowfullscreen></iframe> {{outlet}}
      </div>
    </div>
  </div>
</section>

<section class="row p-t-3 p-b-3 m-t-2 m-b-3 text-center">
  <h2 class="m-b-2">Customer or Tester?</h2>
  <h5 class="text-success m-b-3">You are a customer and a tester! Every user can post tasks ank evaluate design of other users.</h5>

  <div class="container">
    <div class="col-sm-6">
      <div class="panel panel-primary">
        <div class="panel-heading">Customer</div>
        <ul class="list-group">
          <li class="list-group-item">Describe task</li>
          <li class="list-group-item">Select audience</li>
          <li class="list-group-item">Analyse results</li>
          <li class="list-group-item">Improve your product</li>
          <li class="list-group-item text-primary">Increase revenue!</li>
        </ul>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="panel panel-success">
        <div class="panel-heading">Tester</div>
        <ul class="list-group">
          <li class="list-group-item">Select task</li>
          <li class="list-group-item">Read instructions carefully</li>
          <li class="list-group-item">Perform testing</li>
          <li class="list-group-item">Write your impression</li>
          <li class="list-group-item text-success">Get credits!</li>
        </ul>
      </div>
    </div>
  </div>

  {{#link-to "login" class="btn btn-lg btn-link"}}Sign up here...{{/link-to}}
</section>
