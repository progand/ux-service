<ol class="breadcrumb">
  <li class="active">Tasks</li>
</ol>

<form class="form-inline m-b-lg" {{action (mut q) query on="submit"}}>
  <div class="form-group">
    <label class="sr-only" for="q">Search query:</label> {{input value=query type="text" class="form-control" id="q" placeholder="Enter query here"}}
  </div>
  <button type="submit" class="btn btn-default">Search</button>
</form>

<div class="text-right">
  {{#link-to "tasks.new" class="btn btn-primary" }}{{fa-icon "plus"}} Add task{{/link-to}}
</div>

{{#unless model.length}}
  <div class="alert alert-info m-t-md">No tasks so far.</div>
{{/unless}}

{{#each model as |item|}}
  {{#link-to 'tasks.detail' item.id}}
    <div class="list-group m-t-md">
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">{{item.title}}</h4>
        <p class="list-group-item-text">{{truncate item.text}}</p>
        {{#if (or item.minAge item.maxAge)}}
          <div>
            <span class="badge">{{age-range item.minAge item.maxAge}} years</span>
          </div>
        {{/if}}
      </a>
    </div>
  {{/link-to}}
{{/each}}

{{#if canShowMore}}
  <div class="text-center">
    <button class="btn btn-primary" {{action "showMore"}}>Show more</button>
  </div>
{{/if}}
