<form class="form-inline" {{action (mut q) query on="submit"}}>
  <div class="form-group">
    <label class="sr-only" for="q">Search query:</label>
    {{input value=query type="text" class="form-control" id="q" placeholder="Enter query here"}}
  </div>
  <button type="submit" class="btn btn-default">Search</button>
</form>
<hr/>

{{#each model.items as |item|}}
  <div class="list-group">
    <a href="#" class="list-group-item">
      <h4 class="list-group-item-heading">{{item.user.login}}</h4>
      <p class="list-group-item-text">{{truncate item.body}}</p>
    </a>
  </div>
{{/each}}

{/* https://emberobserver.com/addons/pagination-pager */}
{{pagination-pager count=model.total_count current=page change=(action (mut page))}}
