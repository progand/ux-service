<ol class="breadcrumb">
  <li>{{#link-to "tasks.index"}}Tasks{{/link-to}}</li>
  <li class="active">New</li>
</ol>

<h4>New task</h4>
<form action="" {{action "submit" title text on="submit"}} class="p-b-lg">
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title class="form-control" id="title" placeholder="Title"}}
  </div>
  <div class="form-group">
    <label for="minAge">minAge</label>
    {{input value=minAge type="number" class="" id="minAge" placeholder="21"}}
    <label for="maxAge">maxAge</label>
    {{input value=maxAge type="number" class="" id="maxAge" placeholder="44"}}
   </div>
  <div class="form-group">
    <label for="text">Text</label>
    {{textarea value=text class="form-control" id="text" placeholder="Text"}}
  </div>
  <button type="submit" class="btn btn-primary">Submit task</button>
  {{#link-to "tasks" class="btn btn-link"}}Cancel{{/link-to}}
</form>
