<div class="text-center m-v-3 p-v-3">
  <h1>Sign in via</h1>
  <p class="muted">Select any service to sign in with:</p>
  {{#if error}}
    <div class="text-danger">
      Some errors have occured:
      <ul class="list-unstyled">
        {{#each error.errors as |errorItem|}}
          <li>{{errorItem}}</li>
  {{else}}
    {{error}}
        {{/each}}
      </ul>
    </div>
  {{/if}}

  <div class="m-v-3 container">
    <div class="row">
      <div class="col-sm-4 m-b-1">
        {{bs-button class="btn-block btn btn-lg btn-facebook" defaultText="Facebook" pendingText="Wait..." resolvedText="Success!" onClick=(action "authenticateWith" "facebook")}}
      </div>
      <div class="col-sm-4 m-b-1">
        {{bs-button class="btn-block btn btn-lg btn-primary" defaultText="Google" pendingText="Wait..." resolvedText="Success!" onClick=(action "authenticateWith" "google")}}
      </div>
      <div class="col-sm-4 m-b-1">
        {{bs-button class="btn-block btn btn-lg btn-twitter" defaultText="Twitter" pendingText="Wait..." resolvedText="Success!" onClick=(action "authenticateWith" "twitter")}}
      </div>
    </div>
  </div>
  <p>
    <span class="text-info">Not registered?</span>
    <span class="text-muted">No worries, you will be registered automatically on the very first sign in.</span>
  </p>
</div>
